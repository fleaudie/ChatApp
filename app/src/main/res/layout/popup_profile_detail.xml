<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/powder_pink_trans">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgMsgProfilePhoto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/empty_profile_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnCancel"
            app:layout_constraintTop_toTopOf="@+id/btnCancel" />

        <TextView
            android:id="@+id/txtReceiverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/imgMsgProfilePhoto"
            app:layout_constraintStart_toStartOf="@+id/imgMsgProfilePhoto"
            app:layout_constraintTop_toBottomOf="@+id/imgMsgProfilePhoto" />

        <TextView
            android:id="@+id/txtReceiverNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/txtReceiverName"
            app:layout_constraintStart_toStartOf="@+id/txtReceiverName"
            app:layout_constraintTop_toBottomOf="@+id/txtReceiverName" />

        <ImageView
            android:id="@+id/btnCancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/arrow_back_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>